<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>SCS - Academic Plan</display-name>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Direct</servlet-name>
        <servlet-class>org.scs.ap.servlet.Direct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TitlePost</servlet-name>
        <servlet-class>org.scs.ap.servlet.TitlePost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>org.scs.ap.servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectPost</servlet-name>
        <servlet-class>org.scs.ap.servlet.SubjectPost</servlet-class>
    </servlet>

    <!-- mapping -->
    <servlet-mapping>
        <servlet-name>Direct</servlet-name>
        <url-pattern/>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TitlePost</servlet-name>
        <url-pattern>/title</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectPost</servlet-name>
        <url-pattern>/subject</url-pattern>
    </servlet-mapping>
</web-app>